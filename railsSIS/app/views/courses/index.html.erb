<h2>Courses</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Code</th>
    <th>Credits</th>
    <th>Teacher</th>
    <th>Description</th>
    <th></th>
  </tr>
 
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.title %></td>
      <td><%= course.code %></td>
      <td><%= course.credits %></td>
      <td><%= course.teacher %></td>
      <td><%= course.description %></td>
      <td><%= link_to 'Show', course_path(course) %></td>
      <td><%= link_to 'Edit', edit_course_path(course) %></td>
    </tr>
  <% end %>
</table>

<br><br><%= link_to "Add Course", new_course_path %>
<br><br><%= link_to "<< Back", homepage_index_path %>