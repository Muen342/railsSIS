<h2>Edit Course</h2>

<%= form_with model: @course, local: true do |form| %>
  <p>
    <%= form.label :code %><br>
    <%= form.text_field :code %>
  </p>
  
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :credits %><br>
    <%= form.text_field :credits %>
  </p>

  <p>
    <label>Teacher</label><br>
    <select name="courses[teacher]" id="courses_teacher">
      <% @teachers.each do |t| %>
        <% if @course.teacher == "#{t.name} #{t.surname}" %>
          <option value="<%= t.name %> <%= t.surname %>" selected="selected" ><%= t.name %> <%= t.surname %></option>
        <% else %>
          <option value="<%= t.name %> <%= t.surname %>" ><%= t.name %> <%= t.surname %></option>
        <%end%>
      <% end %>
    </select>
  </p>
 
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>

<br><br><%= link_to "<< Back", courses_path %>
